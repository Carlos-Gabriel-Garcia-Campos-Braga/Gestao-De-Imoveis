<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppGestaoImoveis.Views.MonthlyBillsPage"
             Title=""
             BackgroundColor="White">
    <VerticalStackLayout>
        <Label Text="Gestão de Imóveis
               Contas Mensais"
               FontSize="24"
               HorizontalTextAlignment="Center"
               BackgroundColor="Green"
               TextColor="White"
               />

        <CollectionView x:Name="RenterList" ItemsSource="{Binding Renters}" Margin="12">

            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical" ItemSpacing="5" />
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BackgroundColor="Green" CornerRadius="15" Padding="10" Margin="5">
                        <VerticalStackLayout>
                            <Label Text="{Binding Name}" FontSize="18" TextColor="White"/>
                            <Label Text="{Binding BillsSummary}" FontSize="14" TextColor="White"/>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>